{
  "url": "https://commonplace.inquiry.institute",
  "server": {
    "port": 2368,
    "host": "0.0.0.0"
  },
  "database": {
    "client": "mysql",
    "connection": {
      "host": "${DB_HOST}",
      "port": "${DB_PORT}",
      "user": "${DB_USER}",
      "password": "${DB_PASSWORD}",
      "database": "${DB_NAME}",
      "charset": "utf8mb4"
    },
    "pool": {
      "min": 2,
      "max": 10
    }
  },
  "mail": {
    "transport": "SMTP",
    "options": {
      "service": "Gmail",
      "auth": {
        "user": "${MAIL_USER}",
        "pass": "${MAIL_PASSWORD}"
      }
    }
  },
  "storage": {
    "active": "LocalFileStorage"
  },
  "paths": {
    "contentPath": "/var/lib/ghost/content/"
  },
  "logging": {
    "transports": [
      "file",
      "stdout"
    ]
  }
}
